<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="recipe"
            type="com.example.cookbook.Recipe" />

        <variable
            name="clickListener"
            type="com.example.cookbook.presentation.recipe.list.RecipeAdapter.OnClickListener" />
    </data>

    <androidx.cardview.widget.CardView
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        app:cardCornerRadius="3dp"
        android:onClick="@{() -> clickListener.onClick(recipe)}">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/image_recipe_item"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:imageResource="@{recipe.image}"
                tools:srcCompat="@mipmap/pancakes"
                android:adjustViewBounds="true"/>

            <TextView
                android:id="@+id/text_recipe_item"
                style="@style/RecipeTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@{recipe.name}"
                tools:text="@string/sample_recipe_name"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"/>
        </LinearLayout>

    </androidx.cardview.widget.CardView>
</layout>